<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/size100dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/size8dp"
        android:layout_margin="@dimen/size5dp"
        android:elevation="@dimen/size10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size100dp"
            android:layout_height="@dimen/size100dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"
            android:padding="@dimen/size10dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nameListItem"
        android:fontFamily="@font/proximanovaregular"
        android:textColor="#000"
        android:textSize="@dimen/text10sp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/descList"
        android:fontFamily="@font/proximanovaregular"
        android:textSize="@dimen/text10sp"
        android:gravity="center"
        />

</LinearLayout>